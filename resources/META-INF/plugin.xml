<idea-plugin url="https://github.com/jvolkman/intellij-protobuf-editor">
  <name>Protocol Buffers Editor</name>
  <id>idea.plugin.protoeditor</id>
  <vendor>JetBrains</vendor>
  <category>Microservices</category>

  <content>
    <module name="protoeditor-core" package="com.intellij.protobuf"/>
  </content>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>

  <depends config-file="golang_optional.xml" optional="true">com.intellij.modules.go</depends>
  <depends config-file="python_optional.xml" optional="true">com.intellij.modules.python</depends>
  <depends config-file="java_optional.xml" optional="true">com.intellij.java</depends>
</idea-plugin>